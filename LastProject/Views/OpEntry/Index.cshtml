@model IEnumerable<LastProject.Models.OpEntry>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; ;
}
<h2>Index</h2>

<p>
    <a>@Html.ActionLink("Create New", "Create", "OpEntry")</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccrCr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcctDb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpenDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccrCr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcctDb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OpEntryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OpEntryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OpEntryId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
